<section class="container">
    <%=render 'shared/post_show',post:@post%>
    <%=render 'shared/comments',comments:@comments%>
    <div class='d-flex justify-content-between p-3'>
    <%=link_to 'Edit post', edit_user_post_path(@post),class:'btn btn-secondary align-self-start'%>
    <%= button_to "Delete",  "/users/#{@post.author.id}/posts/#{@post.id}",class:'btn btn-secondary align-self-start',method: :delete%>
    <%= link_to "Comment",  new_user_post_comment_path(post_id:@post.id),class:'btn btn-secondary align-self-start'%>
    </div>
</section>