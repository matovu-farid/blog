<section class="container">
    <header>
        <%=render 'shared/user', user:@user %>
    </header>
    <section class="card text-dark bg-light">
        <div class="card-header">Bio</div>
        <div class="card-body">
            <p class="card-text">
                <%=@user.bio%>
            </p>
        </div>
    </section>
    <ul class='list-group '>
    <%@user.last_three_posts.each do |post|%>
        <li class="list-group-item px-0">
            <%=render 'shared/post', post:post%>
        </li>
      <%end%>
    </ul>
    <%=link_to user_posts_path(user_id:@user.id) ,class:'list-group-item-action p-0 m-0 d-flex justify-content-center' do%>
            <button class="btn btn-success ">See all Posts</button>
    <%end%>

    

</section>